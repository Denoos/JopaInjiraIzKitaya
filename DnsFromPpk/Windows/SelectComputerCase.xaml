<Window x:Class="DnsFromPpk.SelectComputerCase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnsFromPpk"
        mc:Ignorable="d"
        Title="SelectComputerCase" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="ComputerCase">
            <StackPanel Orientation="Horizontal">
                <Label Content="{Binding Path=Name}"/>
                <Label Content="{Binding Path=Cost}" DataContext="string"/>
                <Label Content="{Binding Path=MaxGpuLong}" DataContext="string"/>
                <Label Content="{Binding Path=SsdSlots}" DataContext="string"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ListBox SelectedItem="{Binding Source= SelectedComponent, Path=ComputerCase}" ItemsSource="{Binding Source= AllComponents, Path=ComputerCase}"/>          
        <Button Content="Select" Click="Select" HorizontalAlignment="Center"  VerticalAlignment="Bottom" Width="Auto" Height="Auto"/>
    </Grid>
</Window>